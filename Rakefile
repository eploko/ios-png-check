require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "ios-png-check"
    gem.summary = %Q{iPhone 4 @2x assets made easy}
    gem.description = %Q{A simple utility to check that your @2x iOS PNG assets targeting iPhone 4 are in a good shape}
    gem.email = "andrey@subbotin.me"
    gem.homepage = "http://github.com/eploko/ios-png-check"
    gem.authors = ["Andrey Subbotin"]
    gem.files =  FileList["[A-Z][A-Z]*"]
    gem.executables = ['ios-png-check']
    gem.default_executable = ['ios-png-check']
    # gem is a Gem::Specification... see http://www.rubygems.org/read/chapter/20 for additional settings
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end
